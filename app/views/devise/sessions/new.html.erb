<div class="flex justify-center bg-slate-100">
  <div class="w-full max-w-md bg-white shadow rounded-lg p-6">
    <h2 class=" text-lg text-slate-600 font-bold mb-6 text-center">Zaloguj</h2>

    <%= form_with model: resource, as: resource_name, url: session_path(resource_name), class: "space-y-4" do |f| %>
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-slate-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full border border-slate-300 rounded-md p-2 text-slate-600" %>
      </div>

      <div>
        <%= f.label :Hasło, class: "block text-sm font-medium text-slate-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full border border-slate-300 rounded-md p-2 text-slate-600" %>
      </div>

      <div>
        <%= f.submit "Zaloguj", class: "w-full bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700" %>
      </div>
    <% end %>

    <!-- CTA pod formularzem -->
    <div class="mt-6 text-center text-sm">
      <p class="text-slate-600">
        Nie masz jeszcze konta?
        <%= link_to "Zarejestruj się", new_registration_path(resource_name), class: "text-blue-600 font-semibold hover:underline" %>
      </p>
    </div>

    <div class="mt-4 text-center text-sm">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-blue-500 hover:underline" %>
    </div>
  </div>
</div>
