<div class="flex justify-center bg-slate-100">
  <div class="w-full max-w-md bg-white shadow rounded-lg p-6">
    <h2 class="text-lg text-slate-600 font-bold mb-6 text-center">Edytuj profil</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: "space-y-4") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div>
        <%= f.label :avatar, "Avatar", class: "block text-sm font-medium text-slate-700" %>
        <%= f.file_field :avatar, class: "mt-1 block w-full border border-slate-300 rounded-md p-2" %>
      </div>
      <div>
        <%= f.label :email, "Email", class: "block text-sm font-medium text-slate-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full border border-slate-300 rounded-md p-2" %>
      </div>

      <div>
        <%= f.label :password, "Nowe hasło", class: "block text-sm font-medium text-slate-700" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full border border-slate-300 rounded-md p-2" %>
        <p class="text-xs text-slate-500 mt-1">Zostaw puste, jeśli nie chcesz zmieniać.</p>
      </div>

      <div>
        <%= f.label :password_confirmation, "Potwierdź hasło", class: "block text-sm font-medium text-slate-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full border border-slate-300 rounded-md p-2" %>
      </div>

      <div>
        <%= f.label :current_password, "Obecne hasło", class: "block text-sm font-medium text-slate-700" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-1 block w-full border border-slate-300 rounded-md p-2" %>
        <p class="text-xs text-slate-500 mt-1">Potrzebne do potwierdzenia zmian.</p>
      </div>

      <div>
        <%= f.submit "Zapisz zmiany", class: "w-full bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700" %>
      </div>
    <% end %>

    <div class="mt-6 text-center text-sm">
      <%= button_to "Usuń konto", registration_path(resource_name),
            data: { confirm: "Na pewno chcesz usunąć konto?" },
            method: :delete,
            class: "w-full bg-red-600 text-white py-2 px-4 rounded hover:bg-red-700" %>
    </div>
  </div>
</div>
