<div class="flex justify-center bg-slate-100 items-center">
  <div class="w-full max-w-md bg-white shadow rounded-lg p-6">
    <h2 class="text-lg text-slate-600 font-bold mb-6 text-center">Zarejestruj się</h2>

    <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :email, "Email", class: "block text-sm font-medium text-slate-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full border border-slate-300 rounded-md p-2 text-slate-600" %>
      </div>

      <div>
        <%= f.label :password, "Hasło", class: "block text-sm font-medium text-slate-700" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full border border-slate-300 rounded-md p-2 text-slate-600" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "Powtórz hasło", class: "block text-sm font-medium text-slate-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full border border-slate-300 rounded-md p-2 text-slate-600" %>
      </div>

      <div>
        <%= f.submit "Utwórz konto", class: "w-full bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700" %>
      </div>
    <% end %>

    <!-- CTA pod formularzem -->
    <div class="mt-6 text-center text-sm">
      <p class="text-slate-600">
        Masz już konto?
        <%= link_to "Zaloguj się", new_session_path(resource_name), class: "text-blue-600 font-semibold hover:underline" %>
      </p>
    </div>
  </div>
</div>
