<%= form_with(model: lesson, class: "contents") do |form| %>
  <% if lesson.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(lesson.errors.count, "error") %> prohibited this lesson from being saved:</h2>

      <ul class="list-disc ml-6">
        <% lesson.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :course_id %>
    <%= form.text_field :course_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": lesson.errors[:course_id].none?, "border-red-400 focus:outline-red-600": lesson.errors[:course_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :starts_at %>
    <%= form.datetime_field :starts_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": lesson.errors[:starts_at].none?, "border-red-400 focus:outline-red-600": lesson.errors[:starts_at].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :ends_at %>
    <%= form.datetime_field :ends_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": lesson.errors[:ends_at].none?, "border-red-400 focus:outline-red-600": lesson.errors[:ends_at].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :location %>
    <%= form.text_field :location, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": lesson.errors[:location].none?, "border-red-400 focus:outline-red-600": lesson.errors[:location].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
