<div>
  <%= f.label :materials, class: "block font-medium" %>
  <%= f.file_field :materials, multiple: true, class: "block" %>
</div>

<%= form_with model: [@course, @lesson], local: true, class: "space-y-4" do |f| %>
  <div>
    <%= f.label :starts_at, class: "block font-medium" %>
    <%= f.datetime_local_field :starts_at, class: "border p-2 rounded w-full" %>
  </div>
  <div>
    <%= f.label :ends_at, class: "block font-medium" %>
    <%= f.datetime_local_field :ends_at, class: "border p-2 rounded w-full" %>
  </div>
  <div>
    <%= f.label :location, class: "block font-medium" %>
    <%= f.text_field :location, class: "border p-2 rounded w-full" %>
  </div>
  <%= f.submit class: "px-4 py-2 rounded bg-indigo-600 text-white" %>
<% end %>
