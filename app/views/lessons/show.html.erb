<h2 class="text-xl font-bold mb-4">Szczegóły lekcji</h2>
<% if @lesson.materials.attached? %>
  <h3 class="text-lg font-semibold mt-6 mb-2">Materiały</h3>
  <ul class="list-disc pl-5">
    <% @lesson.materials.each do |file| %>
      <li><%= link_to file.filename.to_s, url_for(file) %></li>
    <% end %>
  </ul>
<% end %>
<p><strong>Start:</strong> <%= @lesson.starts_at&.strftime("%Y-%m-%d %H:%M") %></p>
<p><strong>Koniec:</strong> <%= @lesson.ends_at&.strftime("%Y-%m-%d %H:%M") %></p>
<p><strong>Miejsce:</strong> <%= @lesson.location.presence || "—" %></p>

<div class="mt-4">
  <%= link_to "Wróć do listy", course_lessons_path(@course), class: "text-indigo-600 hover:underline" %>
</div>
