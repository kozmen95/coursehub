<div id="<%= dom_id course %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= course.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= course.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Capacity:</strong>
    <%= course.capacity %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Price cents:</strong>
    <%= course.price_cents %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Published:</strong>
    <%= course.published? ? "Yes" : "No" %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Instructor:</strong>
    <%= course.instructor_id %>
  </div>
</div>
