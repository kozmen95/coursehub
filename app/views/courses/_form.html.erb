 <%= form_with(model: @course, local: true, class: "gap-y-10 text-black") do |form| %>
      <!-- Cover image -->
      <div>
        <%= form.label :cover_image, "Okładka", class: "block text-sm font-medium text-slate-700 mb-2 mt-2" %>
        <%= form.file_field :cover_image, class: "block w-full text-sm text-slate-600 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
      </div>

      <!-- Title -->
      <div>
        <%= form.label :title, "Tytuł", class: "block text-sm font-medium text-slate-700 mb-2 mt-2" %>
        <%= form.text_field :title, class: "mt-2 block w-full text-slate-600 border border-slate-300 rounded-md shadow-sm p-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Description -->
      <div>
        <%= form.label :description, "Opis", class: "block text-sm font-medium text-slate-700 mb-2 mt-2" %>
        <%= form.text_area :description, rows: 4, class: "mt-2 block w-full text-slate-600 border border-slate-300 rounded-md shadow-sm p-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Capacity -->
      <div>
        <%= form.label :capacity, "Pojemność", class: "block text-sm font-medium text-slate-700 mb-2 mt-2" %>
        <%= form.number_field :capacity, class: "mt-2 block w-full text-slate-600 border border-slate-300 rounded-md shadow-sm p-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Price -->
      <div>
        <%= form.label :price_cents, "Cena", class: "block text-sm font-medium text-slate-700 mb-2 mt-2" %>
        <%= form.number_field :price_cents, class: "mt-2 block w-full text-slate-600 border border-slate-300 rounded-md shadow-sm p-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Published -->
      <div class="flex items-center gap-2">
        <%= form.check_box :published, class: "h-4 w-4 text-blue-600 border-slate-300 rounded focus:ring-blue-500 mb-2 mt-2" %>
        <%= form.label :published, "Opublikowany", class: "text-sm text-slate-700" %>
      </div>

      <!-- Submit -->
      <div>
        <%= form.submit "Zapisz kurs", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-md shadow" %>
      </div>
    <% end %>