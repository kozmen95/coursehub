<%= form_with model: @course, local: true, html: { multipart: true }, class: "space-y-4" do |form| %>
  <div>
    <%= form.label :title, class: "block font-medium" %>
    <%= form.text_field :title, class: "border p-2 rounded w-full" %>
  </div>

  <div>
    <%= form.label :description, class: "block font-medium" %>
    <%= form.text_area :description, rows: 5, class: "border p-2 rounded w-full" %>
  </div>

  <div>
    <%= form.label :capacity, class: "block font-medium" %>
    <%= form.number_field :capacity, class: "border p-2 rounded w-full" %>
  </div>

  <div>
    <%= form.label :price_cents, "Cena (gr)", class: "block font-medium" %>
    <%= form.number_field :price_cents, class: "border p-2 rounded w-full" %>
  </div>

  <div class="flex items-center gap-4">
    <div class="grow">
      <%= form.label :cover_image, "Okładka kursu", class: "block font-medium" %>
      <%= form.file_field :cover_image, class: "block" %>
      <p class="text-xs text-slate-500 mt-1">PNG/JPG, opcjonalnie.</p>
    </div>

    <% if @course.cover_image.attached? %>
      <div class="shrink-0">
        <%= image_tag @course.cover_image, class: "h-24 w-auto rounded border" %>
      </div>
    <% end %>
  </div>

  <div class="pt-2">
    <%= form.submit (@course.persisted? ? "Zapisz zmiany" : "Utwórz kurs"),
                    class: "px-4 py-2 rounded bg-indigo-600 text-white" %>
  </div>
<% end %>
